generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// attribute @id
// another attribute @default

model User {
  id Int @id @default(autoincrement())
  name String
  email String[]
  isAdmin Boolean? @default(false)
  hugeNumber BigInt?
}

model Post {
  id String @id @default(cuid())
  title String @default("")
  content String @default("")
}
